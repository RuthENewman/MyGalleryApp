<div id="my-gallery-logo"><%= image_tag "myGalleryLogoSmall.png" %></div>
<h1 class="welcome-page-header">My Gallery</h1>

<table>
  <thead>
    <tr>
      <th>Artist name</th>
      <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= link_to 'Profile page', artist %></td>
    <td><%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
  </table>


<br>

<div class="footer-links">
  <h4><%= link_to 'Add an artist', new_artist_path %></h4>
  <h4><%= link_to 'Add an artwork', new_artwork_path %></h4>
  <h4><%= link_to 'All artworks in the gallery', artworks_path %></h4>
</div>
