<h1>All artworks in the gallery</h1>

<table>
  <thead>
    <tr>
      <th>Artwork name</th>
      <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>
  <% @artworks.each do |artwork| %>
    <tr>
      <td><%= artwork.name %></td>
      <td><%= link_to 'About', artwork %></td>
    <td><%= link_to 'Delete', artwork, method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
  </table>


<br>

<h3 className="footer-links"><%= link_to 'Add an Artist', new_artist_path %></h3>
<h3 className="footer-links"><%= link_to 'Add an Artwork', new_artwork_path %></h3>
<h3 className="footer-links"><%= link_to 'Home', artists_path %></h3>
