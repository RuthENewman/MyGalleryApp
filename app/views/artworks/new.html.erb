<h1>Add an Artwork</h1>
<br>
<%= form_for [@artist, @artwork] do |f| %>
  <div class="field">
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name, :size => 50 %>
  </div>
  <br />
  <div class="field">
  <%= f.label :year, "Year:" %>
  <%= f.number_field :year, :size => 15, min: 1850, max: 2019 %>
  </div>
  <br />
  <%= f.label :artist_id, "Artist:" %>
  <br>
  <%= f.collection_select :artist_id, Artist.all, :id, :name %>
  <br />
  <div class="field">
  <br>
  <%= f.label :image_url, "Add a link to an image of the artwork"%>
  <br>
  <%= f.text_field :image_url, :size => 100 %>
  <br>
  <div class="actions">
  <br>
  <%= f.submit %>
  </div>
<% end %>


<br>
<h4><%= link_to "Add an artist", new_artist_path %></h4>

